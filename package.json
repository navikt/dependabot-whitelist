{
  "name": "dependabot-whitelist",
  "version": "1.0.0",
  "description": "GitHub Action for whitelisting dependencies. Handy when enabling auto-merging, and preserving pull-requests of non-whitelisted dependencies.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "prepare": "ncc build index.js -o dist --source-map --license LICENSE",
    "test": "jest",
    "all": "npm run lint && npm run prepare && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/navikt/dependabot-whitelist.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "Dependabot"
  ],
  "author": "Robin Tordly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/navikt/dependabot-whitelist/issues"
  },
  "homepage": "https://github.com/navikt/dependabot-whitelist#readme",
  "dependencies": {
    "@actions/core": "^1.6.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.32.0",
    "eslint": "^8.2.0",
    "jest": "^27.3.1"
  }
}